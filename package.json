{
  "name": "finance-news-aggregator",
  "version": "1.0.0",
  "description": "A Bloomberg-style financial news aggregator for Indian markets",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "coverage:check": "nyc check-coverage --lines 90 --functions 90 --branches 90 --statements 90"
  },
  "keywords": [
    "finance",
    "news",
    "aggregator",
    "india",
    "markets"
  ],
  "author": "gupta-kartik",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-fetch": "^2.6.7",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nyc": "^15.1.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "server.js",
      "public/script.js",
      "!node_modules/**",
      "!coverage/**",
      "!tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
